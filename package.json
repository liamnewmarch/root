{
  "name": "web-audio",
  "description": "Web Audio Component Library",
  "license": "MIT",
  "author": "Potato London Ltd <opensource@potatolondon.com> (https://p.ota.to)",
  "contributors": [
    "Liam Newmarch <liam@potatolondon.com>",
    "Purvi Trivedi <purvi.trivedi@potatolondon.com>"
  ],
  "version": "0.0.0",
  "exports": {
    "./components/filter": "./components/filter/filter.lit.js",
    "./components/keyboard": "./components/keyboard/keyboard.lit.js",
    "./components/midi-input": "./components/midi-input/midi-input.lit.js",
    "./components/oscillator": "./components/oscillator/oscillator.lit.js",
    "./components/synth": "./components/synth/synth.lit.js",
    "./components/user-input": "./components/user-input/user-input.lit.js",
    "./lib/audioContext": "./lib/audioContext.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "npm run build:components && npm run build:lib",
    "build:components": "esbuild components/**/*.lit.ts --outdir=components",
    "build:demo": "esbuild demo/index.ts --bundle --minify --outdir=demo",
    "build:lib": "esbuild lib/*.ts --outdir=lib",
    "clean": "find components demo lib -name '*.js' -delete",
    "deploy": "npm run clean && npm run build && gcloud --project=potato-synth --quiet app deploy .",
    "start": "esbuild demo/index.{css,ts} --bundle --minify --serve=8000 --servedir=demo",
    "lint": "prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "web-test-runner components/**/*.test.ts --coverage --node-resolve",
    "test:watch": "web-test-runner components/**/*.test.ts --node-resolve --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@open-wc/lit-helpers": "^0.5.1",
    "lit": "^2.2.1",
    "storybook-css-modules-preset": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/testing": "^3.1.3",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/builder-webpack4": "^6.5.12",
    "@storybook/manager-webpack4": "^6.5.12",
    "@storybook/web-components": "^6.5.12",
    "@types/mdx": "^2.0.2",
    "@types/webmidi": "^2.0.6",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@web/dev-server": "^0.1.30",
    "@web/dev-server-esbuild": "^0.3.2",
    "@web/test-runner": "^0.13.27",
    "@web/test-runner-puppeteer": "^0.10.5",
    "babel-loader": "^8.2.5",
    "esbuild": "^0.14.39",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-lit": "^1.6.1",
    "eslint-plugin-storybook": "^0.6.4",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.7",
    "lit-html": "^2.3.1",
    "prettier": "^2.6.2"
  },
  "customElements": "custom-elements.json",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ]
  }
}
