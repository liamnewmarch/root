{
  "name": "web-audio",
  "description": "Webcomponent web-audio following open-wc recommendations",
  "license": "MIT",
  "author": "web-audio",
  "version": "0.0.0",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "build": "esbuild src/index.* --bundle --minify --outdir=dist",
    "deploy": "npm run build && gcloud --project=potato-synth --quiet app deploy",
    "start": "web-dev-server",
    "lint": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test": "web-test-runner src/components/**/*.test.js --coverage --node-resolve",
    "test:ci": "web-test-runner src/components/**/*.test.js --coverage --node-resolve",
    "test:watch": "web-test-runner src/components/**/*.test.js --node-resolve --watch"
  },
  "dependencies": {
    "lit": "^2.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@open-wc/eslint-config": "^7.0.0",
    "@open-wc/testing": "^3.1.3",
    "@web/dev-server": "^0.1.30",
    "@web/test-runner": "^0.13.27",
    "@web/test-runner-puppeteer": "^0.10.5",
    "esbuild": "^0.14.39",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-lit": "^1.6.1",
    "husky": "^4.3.8",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
