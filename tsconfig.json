{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "importsNotUsedAsValues": "preserve",
    "inlineSourceMap": false,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2018"
  },
  "include": [
    "src/**/*.ts"
  ]
}
